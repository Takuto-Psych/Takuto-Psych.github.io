issn = {13556215},
journal = {Addiction Biology},
keywords = {anterior cingulate cortex,cue-induced craving,neurofeedback,nicotine dependence,real-time fMRI,smoking cessation},
number = {4},
pages = {739--748},
title = {{Volitional reduction of anterior cingulate cortex activity produces decreased cue craving in smoking cessation: A preliminary real-time fMRI study}},
volume = {18},
year = {2013}
}
