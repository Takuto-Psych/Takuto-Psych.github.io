file = {:Users/Takuto/Dropbox (追手門学院)/アプリ/Mendeley/pdf/Journal of Neurophysiology/Ponsi et al/Physiological and behavioral reactivity to social exclusion A functional infrared thermal imaging study in patients with psoriasis/Ponsi et al. - 2019 - Physiological and behavioral reactivity to social exclusion A functional infrared thermal imaging study in patient.pdf:pdf},
issn = {00223077},
journal = {Journal of Neurophysiology},
