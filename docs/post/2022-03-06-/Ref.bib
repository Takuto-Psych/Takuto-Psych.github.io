issn = {0893133X},
journal = {Neuropsychopharmacology},
keywords = {Gateway drug hypothesis,Heroin,Light-dark test,Open field,Progressive-ratio schedule,Self-administration},
title = {{Previous exposure to THC alters the reinforcing efficacy and anxiety-related effects of cocaine in rats}},
