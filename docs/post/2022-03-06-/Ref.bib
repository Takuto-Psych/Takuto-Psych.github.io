issn = {02654075},
journal = {Journal of Social and Personal Relationships},
keywords = {Adult attachment style,arousal versus control versus pleasantness,emotion processing,positive versus negative,social versus non-social},
title = {{Influence of adult attachment style on the perception of social and non-social emotional scenes}},
year = {2012}
}
