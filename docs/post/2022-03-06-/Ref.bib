doi = {10.1186/s11689-018-9251-z},
file = {:Users/Takuto/Dropbox (追手門学院)/アプリ/Mendeley/pdf/Journal of neurodevelopmental disorders/Bailey et al/Applying a network framework to the neurobiology of reading and dyslexia/Bailey et al. - 2018 - Applying a network framework to the neurobiology of reading and dyslexia.pdf:pdf},
