issn = {1053-8119},
journal = {NeuroImage},
keywords = {Attention,Connectivity,Default mode,Drug abuse,Insula,Nicotine,fMRI},
number = {4},
pages = {2281--2295},
title = {{Resting state functional connectivity in addiction: Lessons learned and a road ahead}},
