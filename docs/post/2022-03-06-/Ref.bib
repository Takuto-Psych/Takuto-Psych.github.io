file = {:Users/Takuto/Dropbox (追手門学院)/アプリ/Mendeley/pdf/Journal of Social and Personal Relationships/Riva et al/Chronic social exclusion and evidence for the resignation stage An empirical investigation/Riva et al. - 2017 - Chronic social exclusion and evidence for the resignation stage An empirical investigation.pdf:pdf},
issn = {14603608},
journal = {Journal of Social and Personal Relationships},
