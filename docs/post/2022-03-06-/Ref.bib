journal = {The Journal of Neuroscience},
month = {dec},
number = {50},
pages = {11777 LP -- 11786},
title = {{Hedonic Hot Spot in Nucleus Accumbens Shell: Where Do $\mu$-Opioids Cause Increased Hedonic Impact of Sweetness?}},
